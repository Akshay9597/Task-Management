{
    "version":2,
    "port":8080,
    "extra_config": {
        "github_com/devopsfaith/krakend-gologging": {
          "level": "DEBUG",
          "prefix": "[KRAKEND]",
          "syslog": false,
          "stdout": true
        }
      },
    "endpoints": [
        {
          "endpoint":"/signup",
          "method":"POST",
          "backend":[
              {
                  "url_pattern": "/api/v1/signup",
                  "method":"POST",
                  "host": [
                      "http://user-svc:8000"
                  ]
              }
          ]
        },
        {
            "endpoint": "/users/{id}",
            "backend": [
              {
                "url_pattern": "/api/v1/users/{id}",
                "host": [
                    "http://user-svc:8000"
                ]
              }
            ]
        },
        {
            "endpoint":"/tasks",
            "method":"POST",
            "backend":[
                {
                    "url_pattern": "/api/v1/tasks",
                    "method":"POST",
                    "host": [
                        "http://task-svc:8000"
                    ]
                }
            ]
        },
        {
            "endpoint": "/tasks",
            "backend": [
              {
                "url_pattern": "/api/v1/tasks",
                "host": [
                    "http://task-svc:8000"
                ]
              }
            ]
        },
        {
            "endpoint": "/tasks/{id}",
            "backend": [
              {
                "url_pattern": "/api/v1/tasks/{id}",
                "host": [
                    "http://task-svc:8000"
                ]
              }
            ]
        }
    ]
}